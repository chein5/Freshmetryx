<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Venta_Carrito">

    <ImageView
        android:id="@+id/img_bg_ventacarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_ventacarrito" />

    <ImageView
        android:id="@+id/bg_listcarrito"
        android:layout_width="318dp"
        android:layout_height="417dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_listproductos" />

    <ImageView
        android:id="@+id/icon_user_ventacarrito"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon" />

    <ListView
        android:id="@+id/list_carrito"
        android:layout_width="260dp"
        android:layout_height="285dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="80dp"
        android:background="#050505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scanqrCarrito">

    </ListView>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Botilleria Winchester"
        android:textColor="#E7D49E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="301dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="Escanee los productos"
        android:textAlignment="center"
        android:textColor="#E7D49E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_user_ventacarrito" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginStart="36dp"
        android:text="Kristin Meister"
        android:textAlignment="textStart"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageButton
        android:id="@+id/btn_scanqrCarrito"
        android:layout_width="161dp"
        android:layout_height="53dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:srcCompat="@drawable/qr_button"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_totalVenta"
        android:layout_width="255dp"
        android:layout_height="33dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:text="Total: $"
        android:textAlignment="textStart"
        android:textColor="#151514"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_carrito" />

    <ImageButton
        android:id="@+id/ibtn_anular"
        android:layout_width="173dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_totalVenta"
        app:srcCompat="@drawable/anular_button"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_confirmarVenta"
        android:layout_width="205dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_totalVenta"
        app:srcCompat="@drawable/confirmar_button"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>